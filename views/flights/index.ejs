<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css">
<%- include('../partials/nav') %>
<main>
  <h1><%= title %> </h1>

  <table>
    <thead>
      <tr>
        <th>Cancel Flight</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure</th>
        <th>Details</th>
      </tr>
    </thead>

    <tbody>
      <% flights.forEach(flight=> { %>
        <tr>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE" class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>
          </td>
          <td>
            <%= flight.airline %>
          </td>
          <td>
            <%= flight.airport %>
          </td>
          <td>
            <%= flight.flightNo %>
          </td>
          <td>
            <% if(flight.departs <= new Date()) { %>
              <p style="color:red">
                <%= flight.departs %>
              </p>
              <% } else {%>
                <%= flight.departs %>
                  <% } %>
          </td>
          <td>
            <a href="/flights/<%= flights._id%>">Details</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <div>
    <a href="/">Go back</a> <br>
  </div>
  <div>
    <a href="flights/new">Book a Flight</a>
  </div>
</main>

<%- include('../partials/footer') %>